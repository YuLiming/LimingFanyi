    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    >
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_histroy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
